<Window x:Class="WPFprice.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFprice"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="300" Closed="Window_Closed" KeyDown="Window_KeyDown_1" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40"></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>



        <StackPanel x:Name="toDoList" Grid.Row="1"></StackPanel>



        <Grid Grid.Row="2" Background="SteelBlue">
            <Button Width="30" Height="30" HorizontalAlignment="Left" Margin="5" x:Name="add" Click="addbutton_Click" ></Button>
            <StackPanel Width="150" HorizontalAlignment="Right" Orientation="Vertical" Height="49">
                <TextBlock HorizontalAlignment="Right" Height="15" Margin="5 5 10 0" FontSize="12" Foreground="White">總支出</TextBlock>
                <TextBlock HorizontalAlignment="Right" Height="25" FontSize="20" Margin="0 2 10 0" Foreground="White" x:Name="totalPrice" >0</TextBlock>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
